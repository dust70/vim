" {{{ Project
" {{{ Invoicing
function! ConfigureInvoicing()
    let g:syntastic_php_phpcs_args = "--standard=~/repositories/projects/invoicing/coding/ruleset.xml -l --extensions=php --tab-width=" . &tabstop

    call LoadCTagsFile(g:vimfiles . '/persistent-tags/php/zendframework2')
    call ConfigurePhpProject()

    call ConfigureProject(
                \ '~/repositories/projects/invoicing/',
                \ 'vagrant:/var/www/invoicing'
                \ )
endfunction

augroup Invoicing
    autocmd! BufEnter,BufNewFile,BufRead
                \ ~/repositories/projects/invoicing/** call ConfigureInvoicing()
augroup END
"}}}
"}}}

