" {{{ Preisvergleich
function! ConfigureCBNFrontend()
    let g:syntastic_php_phpcs_args = "--standard=tests/ruleset.xml -l --extensions=php --tab-width=" . &tabstop

    call LoadCTagsFile(g:vimfiles . '/persistent-tags/php/zendframework1')
    call ConfigurePhpProject()

    call ConfigureProject(
                \ '~/repositories/cbn/preisvergleich-frontend/',
                \ 'vagrant:/var/www/prvg',
                \ '"public/css/*.compiled.css"',
                \ '"public/css/*.min.css"',
                \ '"public/javascript/*.min.js"',
                \ '"public/mobile/css"',
                \ '"public/mobile/scripts/*.min.js"',
                \ )
endfunction

augroup Preisvergleich
    autocmd! BufEnter,BufNewFile,BufRead
                \ ~/repositories/cbn/preisvergleich-frontend/**
                \ call ConfigureCBNFrontend()
augroup END
"}}}

