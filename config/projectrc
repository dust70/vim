" {{{ CBN
" {{{ Behat
function! ConfigureBehat()
    call ConfigurePhpProject()
endfunction

augroup Behat
    autocmd! BufEnter,BufNewFile,BufRead
                \ ~/repositories/cbn/behat/**
                \ call ConfigureBehat()
augroup END
"}}}

" {{{ Library
function! ConfigureLibrary()
    call ConfigurePhpProject()
endfunction

augroup Library
    autocmd! BufEnter,BufNewFile,BufRead
                \ ~/repositories/cbn/library/**
                \ call ConfigureLibrary()
augroup END
"}}}

" {{{ Preisvergleich
function! ConfigurePreisvergleich()
    let g:syntastic_php_phpcs_args = "--standard=~/repositories/cbn/preisvergleich/tests/ruleset.xml -l --extensions=php --tab-width=" . &tabstop

    call LoadCTagsFile(g:vimfiles . '/persistent-tags/php/zendframework1')
    call ConfigurePhpProject()

    call ConfigureProject(
                \ '~/repositories/cbn/preisvergleich/',
                \ 'vagrant:/var/www/prvg'
                \ )
endfunction

augroup Preisvergleich
    autocmd! BufEnter,BufNewFile,BufRead
                \ ~/repositories/cbn/preisvergleich/**
                \ call ConfigurePreisvergleich()
augroup END
"}}}

