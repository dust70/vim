" {{{ Project
"{{{ Invoice
function! ConfigureInvoice()
    let g:syntastic_php_phpcs_args = "--standard=build/phpcs.xml -l --extensions=php --tab-width=" . &tabstop

    call LoadCTagsFile(g:vimfiles . '/persistent-tags/php/symfony')
    call ConfigurePhpProject()

    call ConfigureProject(
                \ '~/git/projects/invoice/',
                \ 'vagrant:/var/www/htdocs',
                \ '"cache.properties"',
                \ '"frontend.css"',
                \ '"frontend.min.js"',
                \ '"var/cache"',
                \ '"var/logs"',
                \ '"var/sessions"'
                \ )
endfunction

augroup Invoice
    autocmd! BufEnter,BufNewFile,BufRead
                \ ~/git/projects/invoice/** call ConfigureInvoice()
augroup END
"}}}
"}}}

