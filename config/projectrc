" {{{ CBN
" {{{ Admin
function! ConfigureCBNAdmin()
    let g:syntastic_php_phpcs_args = "--standard=tests/ruleset.xml -l --extensions=php --tab-width=" . &tabstop

    call LoadCTagsFile(g:vimfiles . '/persistent-tags/php/zendframework2')
    call ConfigurePhpProject()

    call ConfigureProject(
                \ '~/repositories/cbn/preisvergleich-admin/',
                \ 'vagrant:/var/www/prvg'
                \ )
endfunction

augroup Admin
    autocmd! BufEnter,BufNewFile,BufRead
                \ ~/repositories/cbn/preisvergleich-admin/**
                \ call ConfigureCBNAdmin()
augroup END
"}}}

