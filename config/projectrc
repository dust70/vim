"}}}

" {{{ Project
" {{{ Invoicing
function! ConfigureProjectInvoicing()
    VirtualEnvActivate invoicing
    set makeprg=./manage.py\ test\ --traceback\ --noinput

    call ConfigureProject(
                \ '~/repositories/projects/invoicing/',
                \ 'vagrant:/var/www/invoicing'
                \ )
endfunction
"}}}
"}}}

