" {{{ Rainbow Parentheses Improved
" {{{ rainbow_active
let g:rainbow_active = 1
"}}}

" {{{ rainbow_conf
let g:rainbow_conf = {
            \ 'guifgs': ['lightgray', 'lightblue', 'lightgreen',
            \               'lightcyan', 'lightred', 'lightmagenta',
            \               'lightyellow'],
            \ 'ctermfgs': ['lightgray', 'lightblue', 'lightgreen',
            \               'lightcyan', 'lightred', 'lightmagenta',
            \               'lightyellow'],
            \ 'operators': '_, _',
            \ 'parentheses': [['(', ')'], ['\[', '\]'], ['{', '}']],
            \ 'separately': {
            \ '*': {},
            \ 'php': {
            \      'parentheses': [
            \          ['(', ')'],
            \          ['\[', '\]'],
            \          ['{', '}'],
            \          ['do', 'while'],
            \          ['for', 'endfor'],
            \          ['foreach', 'endforeach'],
            \          ['if', '_elseif\|else_', 'endif'],
            \          ['while', 'endwhile']
            \          ]
            \      },
            \ 'python': 0,
            \ 'tex': {
            \      'parentheses': [
            \          ['(', ')'],
            \          ['\[', '\]'],
            \          ['\\begin{.*}', '\\end{.*}']
            \          ]
            \      },
            \ 'vim': {
            \      'parentheses': [
            \          ['(', ')'],
            \          ['\[', '\]'],
            \          ['{', '}'],
            \          ['for', 'endfor'],
            \          ['fu\w* \s*.*)', 'endfu\w*'],
            \          ['if', '_elseif\|else_', 'endif'],
            \          ['while', 'endwhile']
            \          ]
            \      },
            \ }
            \ }
"}}}
"}}}

